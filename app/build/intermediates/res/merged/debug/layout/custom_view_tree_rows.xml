<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/treeImageCustomView"
        android:layout_alignParentBottom="true">



        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/treeImageCustomView"
            android:src="@mipmap/icon_tree"
            android:padding="5dp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvName"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/treeImageCustomView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvSource"
                android:layout_alignBottom="@+id/treeImageCustomView"
                android:layout_alignStart="@+id/tvGenus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/tvGenus"
                android:layout_below="@+id/tvName"
                android:layout_alignEnd="@+id/tvName" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>